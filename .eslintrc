{
	"extends": [
		"airbnb",
		"angular"
	],
	"rules": {
		/*** SYANTAX ***/
		// you can use unamed functions ( this.init = function(options){..} )
		"func-names": 0,
		// error if trailing comma is present ( [1,2,] )
		"comma-dangle": [0, "never"],
		// warning if you use "for in" loop and include prototype properties of object
		"guard-for-in": 1,

		/*** VARIABLES ***/
		// you can declare variables in more lines
		"one-var": 0,
		// you can use "var", not only "let" or "const"
		"no-var": 0,
		// warning if global variable, not defined before, is used
		"no-undef": 1,
		// warning if you don't use "const" for a variable never modified
		"prefer-const": 1,
		// warning if you declare a variable not at the top of a function scope
		"vars-on-top": 1,
		// you can re-assign a function parameter ( function(b){ b++; } )
		"no-param-reassign": 0,
		// you can use "else" after a return
		"no-else-return": 0,

		/*** SPACES ***/
		// indent 4 spaces
		"indent": [2, 4],
		// a void line at end of file is not necessary
		"eol-last": 0,
		// space before blocks is not necessary ( if()*{ )
		"space-before-blocks": 0,
		// space after keywords is not necessary ( if*(){ )
		"space-after-keywords": 0,
		// space before function parentheses is not necessary ( function*(){ )
		"space-before-function-paren": 0,
		// trailing-space at end of line is allowed ( window.alert();* )
		"no-trailing-spaces": 0,
		// warning if blocks are padded by blank lines
		"padded-blocks": 1,

		/*** ANGULAR ***/
		// limit component for page to 1
		"angular/component-limit": [2, 1],
		// all controllers must have "Ctrl" suffix (check this)
		"angular/controller-name": [2, "/(Ctrl)$/"],
		// all services must start with a uppercase letter
		"angular/service-name": [2, "/^[A-Z].*$/"],
		// all services must start with a lowercase letter
		"angular/directive-name": [2, "/^[a-z].*$/"],
		// warning if there're unused dependencies
		"angular/di-unused": 1,
		// error if you give a name to component function
		"angular/function-type": [2, "anonymous"],
		// error if you use setTimeout instead of $timeout angular wrapper
		"angular/interval-service": 2,
		// error if you use setInterval instead of $interval angular wrapper
		"angular/timeout-service": 2,
		// error if you use a variable to set and get a module and not angular.module
		"angular/module-getter": 2,
		"angular/module-setter": 2,
		// error if you use digest instead of apply
		"angular/no-digest": 2,
		// error if you use template inline
		"angular/no-inline-template": 2,
		// use factory not services
		"angular/no-service-method": 2,

		"angular/angularelement": 0,
	    "angular/controller-as": 0,
	    "angular/controller-as-route": 0,
	    "angular/controller-as-vm": [0, "vm"],
	    "angular/deferred": 0,
	    "angular/definedundefined": 0,
	    "angular/di": [0, "function"],
	    "angular/di-order": [0, true],
	    "angular/directive-name": 0,
	    "angular/component-limit": [0, 0],
	    "angular/document-service": 0,
	    "angular/empty-controller": 0,
	    "angular/file-name": 0,
	    "angular/filter-name": 0,
	    "angular/foreach": 0,
	    "angular/json-functions": 0,
	    "angular/log": 0,
	    "angular/module-name": 0,
	    "angular/module-setter": 0,
	    "angular/no-angular-mock": 0,
	    "angular/no-controller": 0,
	    "angular/no-cookiestore": 0,
	    "angular/no-jquery-angularelement": 0,
	    "angular/no-private-call": 0,
	    "angular/no-service-method": 0,
	    "angular/no-services": [0, ["$http", "$resource", "Restangular"]],
	    "angular/on-watch": 0,
	    "angular/rest-service": 0,
	    "angular/typecheck-array": 0,
	    "angular/typecheck-date": 0,
	    "angular/typecheck-function": 0,
	    "angular/typecheck-number": 0,
	    "angular/typecheck-object": 0,
	    "angular/typecheck-regexp": 0,
	    "angular/typecheck-string": 0,
	    "angular/watchers-execution": [0, "$digest"],
	    "angular/window-service": 0,
	    "no-use-before-define": 0
	}
}